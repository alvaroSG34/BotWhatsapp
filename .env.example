# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=enrollment_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# WhatsApp Configuration (opcional - para futuras configuraciones)
# BOT_NAME=Enrollment Bot
OPENAI_API_KEY=
OCR_SPACE_API_KEY=

# Panel de Administración - Integración
# URL base del panel (sin /api al final)
PANEL_URL=http://localhost:4000/api
# Credenciales del usuario bot en el panel (crear usuario con rol 'bot')
PANEL_BOT_USER=bot_whatsapp
PANEL_BOT_PASSWORD=secure_bot_password_here
# Simple admin token to protect the bot HTTP admin API (use a strong random value)
BOT_ADMIN_TOKEN=replace_with_secure_token
# Port where the bot will expose the admin API (default 3001)
BOT_ADMIN_PORT=3001

# Optional: custom Chromium user data directory for the bot (helps run multiple instances)
# If unset, defaults to ./auth_info
BOT_USER_DATA_DIR=./auth_info